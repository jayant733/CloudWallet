generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  phone String @unique
  password Strng 
  purchases Purchases[]
}

model Course {
  id String @id @default(uuid())
  title String 
  slug String @unique
  purchases Purchases[]
}

model Purchases {
  id String @Id @default(uuid())
  courseId String 
  UserId String 
  user User  @relation(fields : [userId] , references : [id])
  course Course @relation(fields : [courseId], references :[id])

}